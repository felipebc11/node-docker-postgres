{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": [
    "src/**/*controller.ts"
  ],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3
  },
  "routes": {
    "routesDir": "build",
    "iocModule": "src/ioc",
    "authenticationModule": "src/infrastructure/auth/authentication"
  },
  "securityDefinitions": {
    "jwt": {
      "type": "bearerAuth",
      "name": "Authorization",
      "in": "header"
    }
  }
}